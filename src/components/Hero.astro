						<circle cx="200" cy="200" r="100" fill="url(#gradient3)"/>
						<path d="M200 120 L220 180 L280 180 L235 220 L255 280 L200 240 L145 280 L165 220 L120 180 L180 180 Z" fill="#D4AF37" opacity="0.9"/>
						<defs>
							<linearGradient id="gradient1" x1="20" y1="20" x2="380" y2="380">
								<stop offset="0%" style="stop-color:#6B46C1;stop-opacity:1" />
								<stop offset="100%" style="stop-color:#9333EA;stop-opacity:1" />
							</linearGradient>
							<linearGradient id="gradient2" x1="60" y1="60" x2="340" y2="340">
								<stop offset="0%" style="stop-color:#9333EA;stop-opacity:1" />
								<stop offset="100%" style="stop-color:#6B46C1;stop-opacity:1" />
							</linearGradient>
							<linearGradient id="gradient3" x1="100" y1="100" x2="300" y2="300">
								<stop offset="0%" style="stop-color:#2d1b4e;stop-opacity:1" />
								<stop offset="100%" style="stop-color:#1a0b2e;stop-opacity:1" />
