---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { getServiceBySlug, services } from '../../data/services';

export async function getStaticPaths() {
	return services.map((service) => ({
		params: { slug: service.slug },
		props: { service },
	}));
}

const { service } = Astro.props;

if (!service) {
	return Astro.redirect('/');
}
---

<Layout title={`${service.title} - Artemagia`}>
	<Navbar />
	
	<section class="service-detail">
		<div class="service-detail-background"></div>
		<div class="container">
			<div class="service-detail-header">
				<a href="/#servicios" class="back-link">
					<svg width="20" height="20" viewBox="0 0 20 20" fill="none">
						<path d="M12 4L6 10L12 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
					</svg>
					Volver a servicios
				</a>
				<div class="service-icon-large">{service.icon}</div>
				<h1 class="service-detail-title">{service.title}</h1>
				<p class="service-detail-subtitle">{service.shortDescription}</p>
			</div>

			<div class="service-detail-content">
				<div class="service-detail-main">
					<div class="service-section">
						<h2 class="section-heading">Descripción</h2>
						<p class="service-full-description">{service.fullDescription}</p>
					</div>

					<div class="service-section">
						<h2 class="section-heading">Características</h2>
						<ul class="features-list">
							{service.features.map((feature) => (
								<li class="feature-item">
									<svg width="20" height="20" viewBox="0 0 20 20" fill="none">
										<path d="M16.667 5L7.5 14.167L3.333 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
									</svg>
									{feature}
								</li>
							))}
						</ul>
					</div>

					{service.includes && service.includes.length > 0 && (
						<div class="service-section">
							<h2 class="section-heading">Incluye</h2>
							<ul class="includes-list">
								{service.includes.map((item) => (
									<li class="include-item">
										<svg width="20" height="20" viewBox="0 0 20 20" fill="none">
											<circle cx="10" cy="10" r="8" stroke="currentColor" stroke-width="2"/>
											<path d="M7 10L9 12L13 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
										</svg>
										{item}
									</li>
								))}
							</ul>
						</div>
					)}

					{service.additionalInfo && (
						<div class="service-section">
							<h2 class="section-heading">Información adicional</h2>
							<p class="additional-info">{service.additionalInfo}</p>
						</div>
					)}
				</div>

				<div class="service-detail-sidebar">
					<div class="contact-card">
						<h3>¿Interesado en este servicio?</h3>
						<p>Contáctanos para más información y obtener un presupuesto personalizado.</p>
						<a href="/#contacto" class="btn btn-primary btn-full">
							Solicitar presupuesto
						</a>
						<a href="mailto:contacto@artemagia.cl" class="contact-email">
							contacto@artemagia.cl
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>

	<Footer />
</Layout>

<style>
	.service-detail {
		min-height: 100vh;
		padding: 120px 0 4rem;
		background: var(--color-dark);
		position: relative;
		overflow: hidden;
	}

	.service-detail-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, var(--color-dark) 0%, var(--color-dark-alt) 100%);
		z-index: -1;
	}

	.service-detail-background::before {
		content: '';
		position: absolute;
		top: -50%;
		right: -20%;
		width: 800px;
		height: 800px;
		background: radial-gradient(circle, rgba(147, 51, 234, 0.15) 0%, transparent 70%);
		border-radius: 50%;
		animation: float 20s ease-in-out infinite;
	}

	.service-detail-background::after {
		content: '';
		position: absolute;
		bottom: -30%;
		left: -10%;
		width: 600px;
		height: 600px;
		background: radial-gradient(circle, rgba(107, 70, 193, 0.15) 0%, transparent 70%);
		border-radius: 50%;
		animation: float 15s ease-in-out infinite reverse;
	}

	@keyframes float {
		0%, 100% { transform: translate(0, 0) scale(1); }
		50% { transform: translate(50px, 50px) scale(1.1); }
	}

	.service-detail-header {
		text-align: center;
		margin-bottom: 4rem;
		color: var(--color-text-white);
	}

	.back-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--color-accent);
		text-decoration: none;
		font-weight: 600;
		margin-bottom: 2rem;
		transition: all 0.3s ease;
	}

	.back-link:hover {
		gap: 1rem;
		transform: translateX(-5px);
	}

	.service-icon-large {
		font-size: 5rem;
		margin-bottom: 1.5rem;
		animation: float-logo 6s ease-in-out infinite;
	}

	@keyframes float-logo {
		0%, 100% { transform: translateY(0) scale(1); }
		50% { transform: translateY(-10px) scale(1.05); }
	}

	.service-detail-title {
		font-size: 3.5rem;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, var(--color-accent), #FFD700);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.service-detail-subtitle {
		font-size: 1.3rem;
		color: rgba(255, 255, 255, 0.8);
		max-width: 700px;
		margin: 0 auto;
	}

	.service-detail-content {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 3rem;
		position: relative;
		z-index: 1;
	}

	.service-detail-main {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	.service-section {
		background: rgba(255, 255, 255, 0.05);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 20px;
		padding: 2.5rem;
	}

	.section-heading {
		font-size: 2rem;
		color: var(--color-accent);
		margin-bottom: 1.5rem;
	}

	.service-full-description {
		color: rgba(255, 255, 255, 0.9);
		font-size: 1.1rem;
		line-height: 1.8;
	}

	.features-list,
	.includes-list {
		list-style: none;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.feature-item,
	.include-item {
		display: flex;
		align-items: flex-start;
		gap: 1rem;
		color: rgba(255, 255, 255, 0.9);
		font-size: 1.05rem;
		line-height: 1.6;
	}

	.feature-item svg,
	.include-item svg {
		flex-shrink: 0;
		margin-top: 0.2rem;
		color: var(--color-accent);
	}

	.additional-info {
		color: rgba(255, 255, 255, 0.9);
		font-size: 1.05rem;
		line-height: 1.8;
	}

	.service-detail-sidebar {
		position: sticky;
		top: 120px;
		height: fit-content;
	}

	.contact-card {
		background: rgba(255, 255, 255, 0.05);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 20px;
		padding: 2.5rem;
		text-align: center;
	}

	.contact-card h3 {
		font-size: 1.5rem;
		color: var(--color-text-white);
		margin-bottom: 1rem;
	}

	.contact-card p {
		color: rgba(255, 255, 255, 0.8);
		margin-bottom: 2rem;
		line-height: 1.6;
	}

	.btn-full {
		width: 100%;
		margin-bottom: 1.5rem;
	}

	.contact-email {
		color: var(--color-accent);
		text-decoration: none;
		font-weight: 600;
		transition: color 0.3s ease;
	}

	.contact-email:hover {
		color: #FFD700;
	}

	@media (max-width: 968px) {
		.service-detail-content {
			grid-template-columns: 1fr;
		}

		.service-detail-sidebar {
			position: static;
		}

		.service-detail-title {
			font-size: 2.5rem;
		}

		.service-icon-large {
			font-size: 4rem;
		}
	}

	@media (max-width: 640px) {
		.service-detail {
			padding: 100px 0 2rem;
		}

		.service-detail-title {
			font-size: 2rem;
		}

		.service-detail-subtitle {
			font-size: 1.1rem;
		}

		.service-section {
			padding: 1.5rem;
		}

		.section-heading {
			font-size: 1.5rem;
		}
	}
</style>

